@{
    ViewBag.Title = "TicketRequest";
}

<h2>TicketRequest</h2>

<div class="col-md-8 col-md-offset-2">
    <form role="form" action="~/Home/TicketRequestResult" method="post">
        <div class="form-group">
            <label for="phone">Номер телефона</label>
            <input type="tel" class="form-control" id="phone" name="phone" placeholder="Введите контактный телефон" required>
        </div>
        <div class="form-group">
            <label for="fio">ФИО</label>
            <input type="text" class="form-control" id="fio" placeholder="ФИО" required>
        </div> 

        <div class="form-group">
            <label for="date">Выберите дату и примерное время</label>
            <input type="datetime-local" class="form-control" id="date" required>
        </div> 

        <div class="from-group">
            <label for="doctor">Выберите врача</label>
            <input type="text" class="form-control" id="doctor" placeholder="Врач" required>            
        </div>
        
        <div class="alert alert-warning">
            <p>Для уточнения времени вам перезвонит наш оператор. Здесь вы указываете желаемое время.</p>
        </div>

        <input type="submit" class="btn btn-default" value="Отправить">
    </form>
</div>
